Run once per project:
gcloud compute firewall-rules create mosh --allow udp:60001-60010

Run once per workstation:
gcloud config set compute/zone us-central1-b
gcloud config set project chinese-language-resources
---------------------

gcloud compute disks create media --size 20GB

gcloud compute disks create nlp --image ubuntu-15-10

gcloud compute instances create nlp \
  --machine-type g1-small \
  --disk name=nlp,boot=yes,auto-delete=no \
  --disk name=media,device-name=media \
  --tags http-server,https-server \
  --metadata startup-script='sudo /usr/share/google/safe_format_and_mount -m "mkfs.ext4 -F" /dev/disk/by-id/google-media /mnt'

gcloud compute ssh nlp <<EOF
sudo apt-get install -y mosh ruby
EOF

gcloud compute ssh nlp <<EOF
sudo apt-get install -y transmission-cli transmission-common transmission-daemon
sudo service transmission-daemon stop
if [ ! -e /etc/transmission-daemon/settings.json.default ]; then
  sudo cp -a /etc/transmission-daemon/settings.json \
    /etc/transmission-daemon/settings.json.default
fi
sudo usermod -m -d /mnt/transmission-daemon debian-transmission
sudo mkdir -p /mnt/transmission-daemon/incomplete
sudo chown debian-transmission:debian-transmission /mnt/transmission-daemon/incomplete
sudo cat /etc/transmission-daemon/settings.json.default \
  | ruby -pe '$_.gsub! %r{"rpc-whitelist-enabled": .*,},
                       %q{"rpc-whitelist-enabled": false,}' \
  | ruby -pe '$_.gsub! %r{"incomplete-dir": .*,},
                       %q{"incomplete-dir": "/mnt/transmission-daemon/incomplete",}' \
  | ruby -pe '$_.gsub! %r{"incomplete-dir-enabled": .*,},
                       %q{"incomplete-dir-enabled": true,}' \
  | ruby -pe '$_.gsub! %r{"download-dir": .*,},
                       %q{"download-dir": "/mnt/transmission-daemon/downloads",}' \
  | ruby -pe '$_.gsub! %r{"rpc-whitelist-enabled": .*,},
                       %q{"rpc-whitelist-enabled": false,}' \
  | sudo tee /etc/transmission-daemon/settings.json
sudo diff -u /etc/transmission-daemon/settings.json.default /etc/transmission-daemon/settings.json
EOF

----------

gcloud compute ssh nlp <<EOF
sudo service transmission-daemon start
EOF

