sudo mkdir -p /mnt/pyAudioAnalysis
sudo chown daniel:daniel /mnt/pyAudioAnalysis
cd /mnt
git clone https://github.com/tyiannak/pyAudioAnalysis.git
cd /mnt/pyAudioAnalysis
mkdir chinesepod
mkdir chinesepod/train
sudo apt-get install -y python-numpy python-scipy python-matplotlib python-mlpy \
  python-eyed3 python-pip libgsl0-dev python-sklearn
pip install eyed3
wget http://sourceforge.net/projects/mlpy/files/mlpy%203.5.0/mlpy-3.5.0.tar.gz
tar xvf mlpy-3.5.0.tar.gz
cd mlpy-3.5.0
sudo python setup.py install
cd ..
sudo easy_install simplejson
sudo pip install scikits.talkbox
sudo apt-get install -y sox lame

lame --decode --decode-mp3delay -9999999999 /mnt/transmission-daemon/downloads/ChinesePod_Newbie/A0001pr\ -\ Intro\ 1\ Good\ morning.mp3 chinesepod/train/a0001.wav
sox chinesepod/train/a0001.wav chinesepod/train/a0001mono.wav channels 1
mv chinesepod/train/a0001mono.wav chinesepod/train/a0001.wav
tee chinesepod/train/a0001.segments <<EOF
0,79.9,talking
79.7,82.0,dialog-music
82.0,149.4,talking
149.4,150.7,dialog-music
150.7,583.4,talking
583.4,585.7,dialog-music
585.7,653,talking
653,655,dialog-music
EOF
python audioAnalysis.py trainHMMsegmenter_fromdir \
  -i chinesepod/train -o chinesepod/output -mw 1.0 -ms 1.0

lame --decode --decode-mp3delay -9999999999 /mnt/transmission-daemon/downloads/ChinesePod_Newbie/A0002pr\ -\ Intro\ 2\ What\'s\ your\ name.mp3 chinesepod/a0002.wav
sox chinesepod/a0002.wav chinesepod/a0002mono.wav channels 1
mv chinesepod/a0002mono.wav chinesepod/a0002.wav
python audioAnalysis.py segmentClassifyFileHMM -i chinesepod/a0002.wav --hmm chinesepod/output


